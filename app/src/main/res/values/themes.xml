<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Swetofor" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="RedButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorPrimary">#FF0000</item>
    </style>

    <style name="YellowButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorPrimary">#FFDD00</item>
    </style>

    <style name="GreenButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorPrimary">#11FF00</item>
    </style>

</resources>